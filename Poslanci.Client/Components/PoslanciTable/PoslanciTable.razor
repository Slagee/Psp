@if (Poslanecs.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Jmeno</th>
                <th scope="col">Prijmeni</th>
                <th scope="col">Kandidatka</th>
                <th scope="col">Detail</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var poslanec in Poslanecs)
            {
                <tr>
                    <td class="align-self-auto">
                        @poslanec.OsobniData.Pred @poslanec.OsobniData.Jmeno
                    </td>
                    <td class="align-self-auto">
                        @poslanec.OsobniData.Prijmeni @poslanec.OsobniData.Za
                    </td>
                    <td class="align-middle">
                        @poslanec.Kandidatka.Zkratka
                    </td>
                    <td class="align-middle">
                        <button type="button" class="btn btn-info">Detail</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <span>
        Loading...
    </span>
}