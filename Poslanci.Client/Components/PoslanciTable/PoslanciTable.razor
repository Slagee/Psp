@if (Poslanecs.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col" class="text-center">Jmeno</th>
                <th scope="col" class="text-center">Prijmeni</th>
                <th scope="col">Kandidatka</th>
                <th scope="col">Detail</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var poslanec in Poslanecs)
            {
                <tr>
                    <td class="align-middle">
                        <div class="row">
                            <div class="col-3 text-right">@poslanec.OsobniData.Pred</div>
                            <div class="col-4 text-left">@poslanec.OsobniData.Jmeno</div>
                        </div>
                    </td>
                    <td class="align-middle">
                        <div class="row">
                            <div class="col-3 text-right">@poslanec.OsobniData.Prijmeni</div>
                            <div class="col-4 text-left">@poslanec.OsobniData.Za</div>
                        </div>
                    </td>
                    <td class="align-middle">
                        @poslanec.Kandidatka.Zkratka
                    </td>
                    <td class="align-middle">
                        <button type="button" class="btn btn-info">Detail</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <span>
        Loading...
    </span>
}