@if (Poslanecs.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col" class="text-right" style="width: 15%">Jmeno</th>
                <th scope="col" style="width: 15%">Prijmeni</th>
                <th scope="col" class="text-center">Kandidatka</th>
                <th scope="col">Kraj</th>
                <th scope="col">Detail</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var poslanec in Poslanecs)
            {
                <tr>
                    <td class="align-middle text-right">
                            @poslanec.OsobniData.Pred @poslanec.OsobniData.Jmeno
                    </td>
                    <td class="align-middle text-left">
                            @poslanec.OsobniData.Prijmeni @poslanec.OsobniData.Za
                    </td>
                    <td class="align-middle text-center">
                        @poslanec.Kandidatka.Zkratka
                    </td>
                    <td class="align-middle">
                        @poslanec.Kraj.NazevOrganuCz
                    </td>
                    <td class="align-middle">
                        <button type="button" class="btn btn-info">Detail</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <span>
        Loading...
    </span>
}